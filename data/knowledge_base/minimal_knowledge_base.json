    "leerstand": {
      "sql": "SELECT W.ONR, W.ENR, W.EBEZ, O.OBEZ \n                         FROM WOHNUNG W \n                         JOIN OBJEKTE O ON W.ONR = O.ONR \n                         LEFT JOIN BEWOHNER B ON W.ONR = B.ONR AND W.ENR = B.ENR \n                         WHERE B.KNR IS NULL",
      "description": "Leerstehende Wohnungen"
    },
    "kaltmiete_summe": {
      "sql": "SELECT SUM(Z1) FROM BEWOHNER WHERE VENDE IS NULL",
      "description": "Summe aller Kaltmieten"
    },
    "mieter_in_objekt": {
      "sql": "SELECT B.BNAME, B.BVNAME, W.EBEZ \n                         FROM BEWOHNER B \n                         JOIN WOHNUNG W ON B.ONR = W.ONR AND B.ENR = W.ENR \n                         WHERE B.ONR = ? AND B.VENDE IS NULL",
      "description": "Alle Mieter in einem Objekt"
    }
